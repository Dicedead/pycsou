<scene version="3.0.0">
	<default name="integrator" value="path" />
	<default name="spp" value="2048" />
	<default name="resy" value="1024" />
	<default name="resx" value="1024" />
	<default name="max_depth" value="2" />
	<integrator type="$integrator">
		<integer name="max_depth" value="$max_depth" />
	</integrator>

	<shape type="rectangle">
		<sensor type="irradiancemeter">
			<film type="hdrfilm">
				<integer name="width" value="$resx" />
				<integer name="height" value="$resy" />
				<string name="file_format" value="openexr" />
				<string name="pixel_format" value="luminance" />
				<rfilter type="box" />
			</film>
			<sampler type="independent">
				<integer name="sample_count" value="$spp" />
			</sampler>
		</sensor>
		<transform name="to_world">
            <translate x="0" y="1" z="-1"/>
        </transform>
		<bsdf type="null" id="CameraBSDF" />
	</shape>

	<bsdf type="null" id="LeftWallBSDF">
	</bsdf>
	<bsdf type="null" id="RightWallBSDF">
	</bsdf>
	<bsdf type="null" id="FloorBSDF">
	</bsdf>
	<bsdf type="null" id="CeilingBSDF">
	</bsdf>
	<bsdf type="null" id="BackWallBSDF">
	</bsdf>


	<shape type="rectangle" id="Floor">
		<transform name="to_world">
			<matrix value="-4.37114e-008 1 4.37114e-008 0 0 -8.74228e-008 2 0 1 4.37114e-008 1.91069e-015 0 0 0 0 1" />
		</transform>
		<ref id="FloorBSDF" />
	</shape>

	<shape type="rectangle" id="Ceiling">
		<transform name="to_world">
			<matrix value="-1 7.64274e-015 -1.74846e-007 0 8.74228e-008 8.74228e-008 -2 2 0 -1 -4.37114e-008 0 0 0 0 1" />
		</transform>
		<ref id="CeilingBSDF" />
	</shape>

	<shape type="rectangle" id="BackWall">
		<transform name="to_world">
			<matrix value="1.91069e-015 1 1.31134e-007 0 1 3.82137e-015 -8.74228e-008 1 -4.37114e-008 1.31134e-007 -2 -1 0 0 0 1" />
		</transform>
		<ref id="BackWallBSDF" />
	</shape>

	<shape type="rectangle" id="RightWall">
		<transform name="to_world">
			<matrix value="4.37114e-008 -1.74846e-007 2 1 1 3.82137e-015 -8.74228e-008 1 3.82137e-015 1 2.18557e-007 0 0 0 0 1" />
		</transform>
		<ref id="RightWallBSDF" />
	</shape>

	<shape type="rectangle" id="LeftWall">
		<transform name="to_world">
			<matrix value="-4.37114e-008 8.74228e-008 -2 -1 1 3.82137e-015 -8.74228e-008 1 0 -1 -4.37114e-008 0 0 0 0 1" />
		</transform>
		<ref id="LeftWallBSDF" />
	</shape>

	<medium type="heterogeneous" id="smoke">
		<float name="sigma_t" value="0" />
    	<float name="albedo" value="1" />
        <!-- Scale the density values as desired -->
        <float name="scale" value="1"/>
		<phase type="hg">
    		<float name="g" value="0.99"/>
		</phase>
    </medium>

	<shape type="sphere" id="Sphere">
		<float name="radius" value="0.33" />
		<point name="center" value="0 1 0" />
		<ref name="interior" id="smoke"/>
	</shape>

	<emitter type="directional">
		<vector name="direction" value="0.0 0.0 -1.0"/>
		<rgb name="irradiance" value="5000,5000,5000" />
	</emitter>

</scene>